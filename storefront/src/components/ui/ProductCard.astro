---
// Product Card component for displaying products
interface Props {
  title: string;
  description: string;
  imageSrc: string;
  imageAlt: string;
  ctaText: string;
  href: string;
}

const { title, description, imageSrc, imageAlt, ctaText, href } = Astro.props;
---

<a 
  href={href}
  class="group relative flex flex-col items-center bg-white rounded-2xl overflow-hidden border border-zinc-400 hover:border-zinc-300 transition-all duration-300 hover:shadow-xl hover:shadow-rose-600/10 hover:-translate-y-1 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-rose-500 focus-visible:ring-offset-2 focus-visible:ring-offset-white cursor-pointer"
  aria-label={`View ${title}`}
>
  <!-- Content Section -->
  <div class="flex flex-col items-center text-center p-6 sm:p-8 w-full">
    <!-- Title -->
    <h3 class="text-2xl sm:text-3xl font-bold text-zinc-900 tracking-tight group-hover:text-rose-600 transition-colors duration-300">
      {title}
    </h3>
    
    <!-- Description -->
    <p class="mt-4 text-sm sm:text-base text-zinc-600 leading-relaxed max-w-md">
      {description}
    </p>

    <!-- CTA -->
    <div class="mt-6 inline-flex items-center gap-2 text-rose-600 font-semibold text-sm sm:text-base group-hover:text-rose-700 transition-colors">
      <span>{ctaText}</span>
      <svg 
        class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" 
        fill="none" 
        viewBox="0 0 24 24" 
        stroke="currentColor"
        aria-hidden="true"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </div>

  <!-- Image Section -->
  <div class="relative w-full h-64 sm:h-72 overflow-hidden bg-white">
    <img 
      src={imageSrc}
      alt={imageAlt}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      loading="lazy"
    />
  </div>
</a>

