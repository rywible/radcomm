---
// Product Hero component for the landing page
const { title, description, ctaText, imageSrc, imageClass } = Astro.props;
---

<section 
  class="relative w-full flex flex-col items-center justify-start overflow-hidden h-[400px] sm:h-[500px] lg:h-[570px] pt-14 sm:pt-16 lg:pt-20"
  aria-label="Featured Product: Cup of Coffee"
>

  <!-- Content Container -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 flex flex-col items-center justify-between gap-10 sm:gap-12">
    
    <!-- Product Details -->
    <div class="flex flex-col gap-4 text-center">
      <!-- Title & Description -->
      <header class="flex flex-col gap-4">
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight leading-tight text-white">
          {title}
        </h1>
        <p class="text-base sm:text-lg md:text-xl text-zinc-300 max-w-2xl mx-auto leading-relaxed">
          {description}
        </p>
      </header>

      <!-- Call to Action -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <button 
          class="group/btn relative inline-flex h-11 items-center justify-center rounded-3xl bg-rose-600 px-6 sm:px-8 text-base sm:text-lg font-semibold text-white cursor-pointer shadow-lg shadow-rose-600/20 hover:bg-rose-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-rose-400/60 transition-colors"
          aria-label="Add Cup of Coffee to cart"
        >
          {ctaText}
        </button>
      </div>
    </div>

    <!-- Product Image -->
    <div class="relative lg:flex-1 w-full max-w-md lg:max-w-lg mt-8 sm:mt-10">
      <div class="relative aspect-square">
        <!-- Image -->
        <img 
          src={imageSrc} 
          alt="A premium cup of artisan coffee" 
          width={600} 
          height={600}
          class={`relative z-10 h-full w-full object-contain drop-shadow-2xl ${imageClass}`}
        />
      </div>
    </div>

  </div>
</section>
