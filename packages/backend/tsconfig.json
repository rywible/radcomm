{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Emit */
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,

    /* Modules (ESM) */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true, // keep import/export as-is (best with ESM + bundlers)
    "resolveJsonModule": true,

    /* Language / libs */
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    /* Safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Project build ergonomics */
    "composite": false,
    "incremental": true,

    /* Interop */
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
